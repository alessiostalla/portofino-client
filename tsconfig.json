{
	"extends": "@tsconfig/recommended/tsconfig.json",
	"compilerOptions": {
        "experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "Node",
		"module": "ES6",
		"declaration": true,
		"sourceMap": true,
		"strict": false,
		"outDir": "dist",
		"declarationDir": "dist/types"
	},
	"include": ["src/index.ts", "src/node_main.ts"],
	"exclude": ["node_modules"]
}
